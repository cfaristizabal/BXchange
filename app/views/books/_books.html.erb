 <div class = container>
  <%= link_to 'Add book', new_book_path %>
  </br>
  </br>

  <div class="row">
    <% @book.each do |book| %>
    <div class="col-sm-2 col-md-2">
      <div class="thumbnail">
        <%= image_tag book.image.url(:medium) %>
        <div class="caption">
          <h4><%= book.name %></h4>
          <h5><%= book.author %></h5>
          <h5><%= book.user.name %></h5>
          <p><%= book.descrption %></p>
          <p>
          <%= link_to 'Show', book_path(book), class: "btn btn-primary", role: "button" %>
          <%= link_to 'Edit', edit_book_path(book), class: "btn btn-primary", role: "button" %>
          <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: "are you sure?"}, class: "btn btn-primary", role: "button" %>
          <%= link_to 'Xchange', xchange_path , class: "btn btn-primary", role: "button" %>
          </p>
        </div>
      </div>
    </div>
    <%end%>
  </div>
</div>